<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7d56d"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/username_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/subject"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="لطفا موضوع خود را وارد کنید"
                    android:textColor="#0d0d0d" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/colorPrimary"
                android:text="ایده شما باعث افزایش بهره وری در کدام زمینه می شود"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/item_spinner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:entries="@array/km_object"></Spinner>

            <View
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:background="#5c5353"  />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/Text_spinner_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/Text_spinner"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="لطفا موضوع خود را به صورت کامل شرح دهید"
                    android:textColor="#000" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/price_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/price"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="فکر می کنید ایده شما چقدر هزینه خواهد داشت؟ (تومان)"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>



            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ارسال ایده"
                android:textSize="20sp" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>

